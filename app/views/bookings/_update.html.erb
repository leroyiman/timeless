  <%= simple_form_for booking do |f| %>
      <div style="display:flex;">
        <div style="width: 49%;, margin: 0 10px; margin-left: 8px;">
          <%= f.input :is_confirmed %>
        </div>
      </div>
      <div style="margin-left: 12px;">
        <%= f.submit 'Book', class: 'btn btn-secondary' %>
      </div>
      <% end %>
</div>



<div data-controller="navbarmodal">

  <div data-navbarmodal-target="menu" class="not-showing-menu">
    <div class="expendable-menu">
      <div>
        <%= link_to "", new_offer_path, class: "fa-solid fa-plus newplus"%>
      </div>
      <div>
        <%= link_to "", new_search_path, class: "fa-solid fa-magnifying-glass newsearch"%>
      </div>
    </div>
  </div>

  <% if user_signed_in? %>
  <li class="nav-item dropdown">
    <a class="nav-link" href="#" data-bs-toggle="dropdown"><%= current_user.email %></a>
    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
    </div>
  </li>
<% else %>
    <div class="footer">
        <%= link_to "", offers_path, class: "fa-solid fa-couch plus"%>
        <%= link_to "", favorites_path, class: "fa-solid fa-heart plus"%>
        <i style="margin: 0;" data-action="click->navbarmodal#modal" class="fa-regular fa-square-plus" id="plus"></i>
        <%= link_to "", root_path, class: "fa-solid fa-envelope plus"%>
        <%= link_to "", profile_path, class: "fa-solid fa-user plus"%>
    </div>
<% end %>
</div>

        <%= f.input :material, label: "Material", placeholder: "e.g. textile, PU leather" %>

        <%# <label for="style">Style</label> <br>
        <%= f.select :style, ['Modern', 'Classic', 'Contemporary', 'Scandinavian', 'DDR', 'Minimalistic', 'Rustic'], class:"dropdown-menu"%>
        <%= f.input :style, prompt: "Select style", collection: ['Modern', 'Classic', 'Contemporary', 'Scandinavian', 'DDR', 'Minimalistics', 'Rustic'] %>

        <%= f.input :condition, prompt: "Select condition", collection: ['Used - Like new', 'Used - Very good', 'Used - Good', 'Used - Acceptable'] %>
        <%# <label for="condition">Condition</label> <br>
        <%= f.select :condition, ['Used - Like new', 'Used - Very good', 'Used - Good', 'Used - Acceptable'] %>

        <%= f.input :category, prompt: "Select category", collection: ['Living Room', 'Kitchen', 'Bedroom', 'Office', 'Kids room', 'Bathroom', 'Hallway', 'Outdoor'] %>
        <%# <label for="category">Category</label> <br>
        <%= f.select :category, ['Living Room', 'Kitchen', 'Bedroom', 'Office', 'Kids room', 'Bathroom', 'Hallway', 'Outdoor'] %>

        <%= f.input :smoke_free, label: "Smoke-free home" %>

        <%= f.input :pet_free, label: "Pet-free home" %>

        <%= f.input :receipt, label: "Purchase receipt" %>

        <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div data-controller="timeslot">

      <div data-timeslotmodal-target="timeslot" id="timeslot">
        <%= f.fields_for :timeslots do |timeslots_attributes|%>
          <div class="d-none">
            <%= timeslots_attributes.input :timeslot, as: :datetime, html5: true, label: "Pick-up time" %>
          </div>
        <% end %>
      </div>
      <div id="timeslot_container"></div>
      <div class="timeslot_button">
        <button id="button" data-action="click->timeslot#modal">Want to add a Timeslot? </button>
      </div>
    </div>
        <%= f.submit %>
        <%# <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-none' %>
        <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>

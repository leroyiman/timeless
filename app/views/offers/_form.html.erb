        <%# form.input :field, as: :slider, min: 0, max: 10
        <input type="range" name="rangeInput" min="0" max="100" onchange="updateTextInput(this.value);">
        <input type="text" id="textInput" value=""> %>

        <%= f.input :size, prompt: "Select size", collection: ['Small', 'Medium', 'Big'] %>
        <%# <label for="size">Size</label> <br>
        <%= f.select :size, ['Small', 'Medium', 'Big'], class:"dropdown-menu"%>

        <%# <%= f.input :color, as: :check_boxes, collection: ['Red', 'Blue', 'Green', 'White', 'Black', 'Gray', 'Brown', 'Yellow', 'Orange', 'Pink', 'Purple', 'Multi-colored'], wrapper: :horizontal_collection_inline %>
